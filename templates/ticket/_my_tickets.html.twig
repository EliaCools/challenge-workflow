{% block body %}
    <h1 class="text-center m-5">Ticket overview</h1>

    <div class="mb-5">
        <a href="{{ path('ticket_new') }}">My tickets</a>
        <a href="{{ path('ticket_new') }}">Create new</a>
{#        if user is customer:#}
{#        <a href="{{ path('ticket_new') }}">Create new</a>#}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>DateCreated</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.priority }}</td>
                <td>{{ ticket.dateCreated ? ticket.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}">Details</a>
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
